<form class="{{cssClass}} background-paper" autocomplete="off">
   <header class="sheet-header flex flex-col ">
      <div class="w-full flex justify-between ">
         <div id="actor_img_div" class="flex align-center justify-center"><img id="actor_img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="250" width="250" /></div>
         
         <div class="flex flex-col flex-1 justify-center px-15">
            <div class="flex flex-col justify-between">
            <h1>
               <input class="{{data.clan}}-inputs" name="name" type="text" value="{{actor.name}}" placeholder="Name" />
            </h1>
            <div class="flex justify-around">
               <div class="flex flex-col flex-1">
                  <div class="flex flex-col">
                     <label for="data.clans">{{localize "l5r4ec.clans.clan"}}</label>
                     <select class="{{data.clan}}-inputs" name="data.clan">
                  {{#each data.clans as |id cat|}}
                     <option value="{{id}}" {{#if (eq id ../data.clan)}}selected{{/if}}>{{localizeClan id}}</option>
                  {{/each}}
                     </select>
                  </div>
                  <div class="flex flex-col">
                  <label for="test">{{localize "l5r4ec.families.family"}}</label>
                  <select class="{{data.clan}}-inputs" name="data.family">
                  {{#each data.families as |id cat|}}
                     <option value="{{id}}" {{#if (eq id ../data.family)}}selected{{/if}}>{{localizeFamily id}}</option>
                  {{/each}}
                  </select>
                  </div>
                  <div class="flex flex-col">
                  <label for="test">{{localize "l5r4ec.schools.school"}}</label>
                  <input class="{{data.clan}}-inputs" type="text" name="data.school" value="{{data.school}}">
                  </div>
               </div>
               <div class="flex align-center  " id="clan-images">
                  <img  src="systems/l5r4ec/assets/icons/clans/{{data.clan}}.svg" alt="">

               </div>  
               </div> 
               </div>
         </div>
         <div class="flex flex-col align-center w-80px justify-center">
            <h1 class="flex flex-col ">
               <label for="data.insight.rank">{{localize "l5r4ec.insight"}}</label>
               <input  class="{{data.clan}}-inputs" id="insight_rank" type="number" name="data.insight.rank" id="insight" value="{{data.insight.rank}}">
            </h1>
            <div class="flex flex-col">
                  <div class="flex flex-col">
                     <label for="data.insight.points">{{localize "l5r4ec.reputation"}}</label>
                     <input class="{{data.clan}}-inputs" type="number" name="data.insight.points" value="{{data.insight.points}}">
                  </div>
                  <div class="flex flex-col ">
                     <label for="test">{{localize "l5r4ec.xp.available"}}</label>
                     <input class="{{data.clan}}-inputs" type="number" name="data.xp" value="{{data.xp}}">
                     </div>
                  <div class="flex flex-col">
                     <label for="test">{{localize "l5r4ec.xp.total"}}</label>
                     <input class="{{data.clan}}-inputs" type="number" name="data.total_xp" value="{{data.total_xp}}">
                  </div>
               </div>   
         </div>
      </div>
      
