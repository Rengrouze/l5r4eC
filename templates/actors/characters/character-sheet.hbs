<div id="char_tab1" class="char_tab-content ">
    Combat

    <div class="flex">
      <!-- search in items all the items with the weapon type-->
      {{#each items as |item|}}
         {{#if (eq item.type "weapon")}}
            <div class="flex flex-col">
               <div class="flex flex-col">
                  <label for="data.items.{{@index}}.name">{{item.name}}</label>
                  <input
                     class="select-on-focus"
                     type="text"
                     name="data.items.{{@index}}.name"
                     value="{{item.name}}"
                     data-type="String"
                     placeholder="name"
                  />
               </div>

               <div class="flex flex-col">
                  <label for="data.items.{{@index}}.description">{{item.system.description}}</label>
                  <input
                     class="select-on-focus"
                     type="text"
                     name="data.items.{{@index}}.description"
                     value="{{item.system.description}}"
                     data-type="String"
                     placeholder="description"
                  />
               </div>
            </div>
         {{/if}}
      {{/each}}
    </div>
</div>
